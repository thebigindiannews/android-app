<manifest package="com.enamakel.thebigindiannews"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"
        android:maxSdkVersion="22"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-sdk tools:overrideLibrary="android.support.customtabs"/>

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">
        <activity android:name=".ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ItemActivity_"
            android:label="@string/title_activity_item">
            <intent-filter android:label="@string/filter_title_item">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="news.ycombinator.com"
                    android:pathPrefix="/item"
                    android:scheme="https"/>
            </intent-filter>
            <intent-filter android:label="@string/filter_title_item">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="news.ycombinator.com"
                    android:pathPrefix="/item"
                    android:scheme="http"/>
            </intent-filter>
            <intent-filter android:label="@string/filter_title_item">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="item"
                    android:pathPrefix="/"
                    android:scheme="${applicationId}"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".FavoriteActivity"
            android:label="@string/title_activity_favorite"
            android:launchMode="singleTop"> <!-- required to get search intents -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_favorite"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".NewActivity"
            android:label="@string/title_activity_new">
        </activity>
        <activity
            android:name=".ShowActivity"
            android:label="@string/title_activity_show">
        </activity>
        <activity
            android:name=".AskActivity"
            android:label="@string/title_activity_ask">
        </activity>
        <activity
            android:name=".JobsActivity"
            android:label="@string/title_activity_jobs">
        </activity>
        <activity
            android:name=".PopularActivity"
            android:label="@string/title_activity_popular">
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_stories"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppAlertDialog">
        </activity>
        <activity
            android:name=".SubmitActivity"
            android:label="@string/title_activity_submit">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ComposeActivity"
            android:label="@string/title_activity_compose">
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user">
            <intent-filter android:label="@string/filter_title_item">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="news.ycombinator.com"
                    android:pathPrefix="/user"
                    android:scheme="https"/>
            </intent-filter>
            <intent-filter android:label="@string/filter_title_item">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="news.ycombinator.com"
                    android:pathPrefix="/user"
                    android:scheme="http"/>
            </intent-filter>
            <intent-filter android:label="@string/title_activity_user">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="user"
                    android:pathPrefix="/"
                    android:scheme="${applicationId}"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ThreadPreviewActivity"
            android:label="@string/title_activity_thread_preview"
            android:theme="@style/AppAlertDialog">
        </activity>

        <service
            android:name=".accounts.AuthenticatorService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>

        <provider
            android:name=".data.MaterialisticProvider"
            android:authorities=".provider"
            android:exported="false"/>
        <provider
            android:name=".data.SearchRecentSuggestionsProvider"
            android:authorities=".recentprovider"
            android:exported="false"/>

        <receiver android:name=".AppUtils$ShareBroadcastReceiver"/>
    </application>
</manifest>