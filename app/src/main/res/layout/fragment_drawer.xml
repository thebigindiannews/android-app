<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="com.enamakel.thebigindiannews.fragments.DrawerFragment"
              android:weightSum="1">

    <FrameLayout
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.enamakel.thebigindiannews.views.TintableTextView
            android:id="@id/drawer_account"
            android:text="@string/login"
            android:textColor="?android:attr/textColorPrimary"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:paddingRight="88dp"
            style="@style/DrawerTextStyle" />

        <ImageButton
            android:id="@id/drawer_logout"
            android:src="@drawable/ic_power_settings_new_white_24dp"
            android:contentDescription="@string/logout"
            android:tint="?android:attr/textColorPrimary"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_gravity="center_vertical|end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo512"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="www.thebigindian.news"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="#55000000"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <View
        android:background="@color/blackT12"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_list"
        android:text="@string/title_activity_list"
        android:drawableLeft="@drawable/ic_trending_up_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_popular"
        android:visibility="gone"
        android:text="@string/title_activity_popular"
        android:drawableLeft="@drawable/ic_whatshot_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_new"
        android:text="@string/title_activity_new"
        android:drawableLeft="@drawable/ic_new_releases_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_show"
        android:visibility="gone"
        android:text="@string/title_activity_show"
        android:drawableLeft="@drawable/ic_done_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_ask"
        android:text="@string/title_activity_ask"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_live_help_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_job"
        android:text="@string/title_activity_jobs"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_work_white_24dp"
        style="@style/DrawerTextStyle"/>

    <View
        android:background="@color/blackT12"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_user"
        android:text="@string/title_activity_user"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_submit"
        android:text="@string/title_activity_submit"
        android:drawableLeft="@drawable/ic_add_white_24dp"
        style="@style/DrawerTextStyle"/>

    <View
        android:background="@color/blackT12"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_favorite"
        android:text="@string/title_activity_favorite"
        android:drawableLeft="@drawable/ic_bookmark_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_settings"
        android:text="@string/action_settings"
        android:drawableLeft="@drawable/ic_settings_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_feedback"
        android:text="@string/feedback"
        android:drawableLeft="@drawable/ic_feedback_white_24dp"
        style="@style/DrawerTextStyle"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        android:id="@id/drawer_about"
        android:text="@string/title_activity_about"
        android:drawableLeft="@drawable/ic_info_white_24dp"
        style="@style/DrawerTextStyle"/>

</LinearLayout>
