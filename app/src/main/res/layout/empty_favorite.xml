<LinearLayout android:id="@id/empty"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_vertical|center"
              android:gravity="center|center_vertical"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@android:id/title"
        style="@style/textEmptyStyle"
        android:text="@string/no_saved_stories"/>

    <include
        android:id="@id/header_card_view"
        layout="@layout/item_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.enamakel.thebigindiannews.views.TintableTextView
        style="@style/textEmptyStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_touch_app_white_48dp"
        android:text="@string/try_me"/>
</LinearLayout>